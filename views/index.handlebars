<div class = "container">
	<div class = "jumbotron">
		<div class = "jumbotrondiv">
			<div><h1 class="text-center display-4">Burger Frenzy!</h1></div>
		</div>
	</div>

    	{{!-- Available Burgers --}}
	<div class="row style="width:80%;">
		<div class="col-md">
			<h2 class="text-center">Menu</h2>
			<hr>
			{{#each burgers}}
				{{#unless devoured}}
					{{> burgers/burger-block eaten=false}}
				{{/unless}}
			{{/each}}
		</div>{{!-- Burgers that have been devoured --}}
		<div class="col-md">
			<h2 class="text-center">Devoured</h2>
			<hr>
			{{#each burgers}}
				{{#if devoured}}
					{{> burgers/burger-block eaten=true}}
				{{/if}}
			{{/each}}
		</div>
	</div>

    {{!-- Alert element --}}
	<div class="alert alert-danger collapse mt-2" id="burgerAlert" role="alert">
		<a href="#" class="close">&times;</a>
		<strong>Note!</strong> Please enter a burger name.
	</div>
    {{!-- Add a burger --}}
	<div class="row  d-flex justify-content-center mt-2">
		<form>
			<div class="form-row align-items-center">
				<div class="col-auto">
					<input type="text" class="form-control form-control-lg validate mb-2" id="burgerInput" placeholder="Burger">
				</div>
				<div class="col">
					<img class="add-burger" src="">
    		</div>
  		</div>
		</form>
	</div>
</div>