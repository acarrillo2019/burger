<div class = "container">
	<div class = "jumbotron">
		<div class = "jumbotrondiv">
			<div><h1 class="text-center display-4">Burger Frenzy!</h1></div>
		</div>
	</div>

    	{{!-- Available Burgers --}}
	<div class="row style="width:80%;">
		<div class="col-md">
			<h2 class="text-center">Menu</h2>
			<hr>
			{{#each burgers}}
				{{#unless devoured}}
					{{> burgers/burger-block eaten=false}}
				{{/unless}}
			{{/each}}
		</div>{{!-- Burgers that have been devoured --}}
		<div class="col-md">
			<h2 class="text-center">Devoured</h2>
			<hr>
			{{#each burgers}}
				{{#if devoured}}
					{{> burgers/burger-block eaten=true}}
				{{/if}}
			{{/each}}
		</div>
	</div>